/* pages/cal/cal.wxss */
.content{
  display:flex;
  flex-direction: column;
  align-items:center;
  box-sizing: border-box;
  background-repeat: repeat;
  padding:30rpx;
  background:#cccccc;
}
.screen{
  background-color:#ffffff;
  border-radius:1.5rpx;
  text-align:right;
  width:720rpx;
  height:100rpx;
  line-height:100rpx;
  margin-right:10rpx;
  margin-bottom:30rpx;
}
.item{
  width:160rpx;
  height:150rpx;
  margin:10rpx;
  text-shadow: 0 1px 1px rgb(0, 0, 0,.3);
  text-align:center;
  line-height:150rpx;
}
.btnGroup{
  display:flex;
  flex-direction: row;
}
.orange{
  color:#fef4c9;
  border:solid 1px #da7c0c;
  background:#f7ad1d;
}
.blue{
  color:#d9eef7;
  border:solid 1px #da7c0c;
  background:#0095cd
}